{% assign collection = collections['all'] %}

{{ collection.title }}


<ul> 
  {% for product in collection.products %}
  {% unless section.settings.show_soldout != false and product.available != true %}
  <li>
      <a style="color:{{ settings.link_color}}" href="{{product.url}}">
      	{{ product.title }} - {{ product.price | money }}
        {% if product.available != true %}
        <span>(Sold out)</span>
        {% endif %}
      </a>
  </li>
  {% endunless %}
  	
  {% endfor %} 
</ul>


{% schema %}
  {
    "name": "Section name",
    "settings": [
	{
		"type": "checkbox",
		"id": "show_soldout",
		"label": "Show soldout products",
		"default": false
	}
]
  }
{% endschema %}

